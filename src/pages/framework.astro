        <!-- Slope factors -->
        <h3 class="font-heading font-bold text-lg mb-4 text-text-primary">Course Rating / Slope</h3>
        <p class="text-text-secondary mb-4 text-sm">Par says how many shots. Slope says how hard those shots are. Each factor adds +1.</p>
        <div class="space-y-2 mb-6">
          {[
            { factor: 'Cross-package boundary', detail: 'Changes span multiple packages' },
            { factor: 'Schema migration', detail: 'Database migration required' },
            { factor: 'New area', detail: 'First time touching this code area' },
            { factor: 'External dependency', detail: 'API, SDK, or service integration' },
            { factor: 'Concurrent agents', detail: 'Multi-agent coordination required' },
          ].map(({ factor, detail }) => (
            <div class="flex items-center gap-3 p-3 rounded-lg bg-bg-card border border-border-subtle">
              <span class="w-8 h-8 rounded-md bg-gold/10 flex items-center justify-center shrink-0 text-gold text-sm font-bold">+1</span>
              <div>
                <span class="text-text-primary text-sm font-medium">{factor}</span>
                <span class="text-text-muted text-sm"> â€” {detail}</span>
