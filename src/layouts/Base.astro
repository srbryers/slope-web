---
import Nav from '../components/Nav.astro';

interface Props {
  title?: string;
  description?: string;
  canonicalPath?: string;
}

const SITE_URL = 'https://slope.dev';

const {
  title = 'SLOPE — Sprint Lifecycle & Operational Performance Engine',
  description = 'A framework for measuring and improving AI agent sprint performance — with golf-inspired scoring.',
  canonicalPath = '',
} = Astro.props;

const canonicalURL = `${SITE_URL}${canonicalPath}`;
const ogImageURL = `${SITE_URL}/og-image.svg`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0F1210" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />
    <title>{title}</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@500;600;700;800&family=Inter:wght@400;500;600&family=Geist+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="SLOPE" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />

    <!-- FOUC prevention: apply saved metaphor before first paint -->
    <script is:inline>
      (function(){var m=localStorage.getItem('slope-metaphor');if(m)document.documentElement.dataset.metaphor=m;})();
    </script>

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "SLOPE",
      "url": SITE_URL,
      "description": "A framework for measuring and improving AI agent sprint performance — with golf-inspired scoring.",
      "creator": {
        "@type": "Organization",
        "name": "SLOPE",
        "url": "https://slope.dev"
      }
    })} />
  </head>
  <body>
    <Nav currentPath={Astro.url.pathname} />
    <div class="h-14"></div>

    <slot />

    <script>
      import { initMetaphorSwitcher } from '../scripts/interactions';
      initMetaphorSwitcher();
    </script>
  </body>
</html>
